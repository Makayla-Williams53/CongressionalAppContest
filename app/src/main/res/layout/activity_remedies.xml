<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Remedies">

    <ImageView
        android:id="@+id/transBufferRemedies1Img"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent" />

    <TextView
        android:id="@+id/remediesTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remedies"
        android:textAlignment="center"
        android:textSize="34sp"
        android:layout_marginBottom="75dp"/>


    <TextView
        android:id="@+id/placeholderRemediesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="implement scrollview here"
        android:textAlignment="center"
        android:layout_marginBottom="75dp"/>

    <Button
        android:id="@+id/backToSymptomsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/white"
        android:background="#244861"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/backToMainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textColor="@color/white"
        android:background="#244861"/>
</LinearLayout>