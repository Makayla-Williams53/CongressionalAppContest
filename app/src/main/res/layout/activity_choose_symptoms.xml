<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EBEC"
    android:gravity="center"

    android:orientation="vertical"
    tools:context=".ChooseSymptoms">

    <TextView
        android:id="@+id/chooseTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Choose Symptoms"
        android:textAlignment="center"
        android:textColor="@color/darkpurple"
        android:textSize="34sp"
        android:typeface="monospace" />


    <TextView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="" />

    <Button
        android:id="@+id/hepBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="hepClick"
        android:text="Hepatitus A"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <Button
        android:id="@+id/whoopBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="whoopClick"
        android:text="Whooping Cough"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <Button
        android:id="@+id/menBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="menClick"
        android:text="Meningococcal Disease"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <Button
        android:id="@+id/tubBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="tubClick"
        android:text="Tuberculosis"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <Button
        android:id="@+id/measBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="measClick"
        android:text="Measles"
        android:textColor="@color/white"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="" />

</LinearLayout>